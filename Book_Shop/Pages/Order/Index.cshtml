@page
@model Book_Shop.Pages.Order.IndexModel

@{
    if (Model.CompleteMessage != null) // повідомлення не дорівнює нулю ТІЛЬКИ коли замовлення успішно оформилось
    {
        <p class="text-center text-dark mt-4 pt-4">
            @Model.CompleteMessage
            <a class="alert-link" asp-page="/Index">На головну</a>
        </p>
    }
    else
    {
        <div class="col mb-5">
            <h3>Оформлення замовлення</h3>
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Order.FirstName"></label>
                    <div class="col-md-5">
                        <input asp-for="Order.FirstName" class="form-control" />
                        <span asp-validation-for="Order.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Order.LastName"></label>
                    <div class="col-md-5">
                        <input asp-for="Order.LastName" class="form-control" />
                        <span asp-validation-for="Order.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Order.Address"></label>
                    <div class="col-md-5">
                        <input asp-for="Order.Address" class="form-control" />
                        <span asp-validation-for="Order.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Order.Phone"></label>
                    <div class="col-md-5">
                        <input asp-for="Order.Phone" class="form-control" />
                        <span asp-validation-for="Order.Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Order.Email"></label>
                    <div class="col-md-5">
                        <input asp-for="Order.Email" class="form-control" />
                        <span asp-validation-for="Order.Email" class="text-danger"></span>
                    </div>
                </div>
                <input class="btn btn-success" type="submit" value="Завершити оформлення" />
            </form>
        </div>  
    }

}



